<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/reqBookImageView"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="90dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Req User Name"
                    android:id="@+id/reqUserNameTextView"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Req Book Name"
                    android:id="@+id/reqBookNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:text="$100"
                    android:textColor="#9e4848"
                    android:id="@+id/reqBookPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/btnDonate"
                        android:layout_gravity="right"
                        android:text="Donate"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="#fff"
                        android:enabled="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>