<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:tag="card view"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgOldBooksPic"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="90dp"/> />
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtOldBookTitle"
                android:text="Old BookName"
                android:maxLines="2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="By someone"
                android:id="@+id/txtOldBookDescription"
                android:maxLines="2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtOldBookDonator"
                android:text="jass"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#9e4848"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="@string/btn_get"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="#fff"
                    android:id="@+id/btnOldBookGet"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>